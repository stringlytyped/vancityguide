<h1><%= t('title', scope: @t_scope) %></h1>

<p><%= t('explanation', scope: @t_scope) %></p>

<%= form_with(url: contact_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :sender_name, t('name', scope: @t_scope) %>
    <%= form.text_field :sender_name, value: @sender_name %>
  </div>
  <div class="field">
    <%= form.label :sender_addr, t('email', scope: @t_scope) %>
    <%= form.email_field :sender_addr, value: @sender_addr %>
  </div>
  <div class="field">
    <%= form.label :message, t('message', scope: @t_scope) %>
    <%= form.text_area :message, value: @message %>
  </div>
  <div class="actions">
    <%= form.submit t('submit', scope: @t_scope), class: "button" %>
  </div>
<% end %>