<h1 class="poi-heading">
  <span class="poi-heading_category"><%= @poi.category.humanize %></span>
  <span class="poi-heading_separator">:</span>
  <span class="poi-heading_name"><%= @poi.name %></span>
</h1>

<p><% @poi.rating.times do %>â˜…<% end %></p>

<dl>
  <dt>Website</dt>
  <dd><%= link_to URI.parse(@poi.website).host, @poi.website %></dd>

  <dt>Price</dt>
  <dd><%= @poi.price %></dd>
</dl>

<%= simple_format(@poi.description) %>


<% if current_user.admin? %>
  <hr>

  <dl>
    <dt>Owner</dt>
    <dd><%= @poi.owner.email %></dd>

    <dt>Public</dt>
    <dd><%= @poi.public %></dd>

    <dt>Featured</dt>
    <dd><%= @poi.featured %></dd>
  </dl>

  <hr>
<% end %>

<div>
  <% if @poi.owner == current_user || current_user.admin? %>
    <%= link_to 'Edit', edit_poi_path(@poi) %> | 
  <% end %>
  <%= link_to 'Back', pois_path %>
</div>